<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<link rel="stylesheet" href='{{ asset("assets/css/cssProfile.css")}}'>
		<link rel="stylesheet" href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css'>
		<link rel="stylesheet" href='https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js'>
		<link rel="stylesheet" href='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'>
		<style>
			h5,
			h3 {
				color: white;
			}

		.change {
			display: inline-block;
            
		} 
		</style>
	</head>
	<body>
		<div class="row py-5 px-4">
			<div
				class="col-md-5 mx-auto">
				<!-- Profile widget -->
				<div class="bg-dark shadow rounded overflow-hidden">
					<div class="px-4 pt-0 pb-4 cover">
						<div class="media align-items-end profile-head">
							<div class="profile mr-3">
								{% if app.user.img == null %}
									<img src="https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=80" alt="..." width="130" class="rounded mb-2 img-thumbnail">
								{% else %}
									<img src="\uploads\{{app.user.img}}" alt="..." width="130" class="rounded mb-2 img-thumbnail">
								{% endif %}
								<a href="{{path('profile_edit',{'id':app.user.id})}}" class="btn btn-primary btn-sm btn-block">Edit profile</a>
							</div>
							<div class="media-body mb-5 text-white">
								<h4 class="mt-0 mb-0">{{ app.user.name}}</h4>
								<p class="small mb-4">
									<i class="fas fa-map-marker-alt mr-2"></i></p>
							</div>
						</div>
					</div>
					<div class="bg-dark p-4 d-flex justify-content-end text-center">
						<ul class="list-inline mb-0">
							<li class="list-inline-item">
								<h5 class="font-weight-bold mb-0 d-block">215</h5>
								<small class="text-muted">
									<i class="fas fa-image mr-1"></i>Photos</small>
							</li>
							<li class="list-inline-item">
								{% if  app.user.followers == null %}
									<h5 class="font-weight-bold mb-0 d-block">0</h5>
								{% else %}
									<h5 class="font-weight-bold mb-0 d-block">{{app.user.followers}}</h5>
								{% endif %}
								<small class="text-muted">
									<i class="fas fa-user mr-1"></i>Followers</small>
							</li>
							<li class="list-inline-item">
								<h5 class="font-weight-bold mb-0 d-block">340</h5>
								<small class="text-muted">
									<i class="fas fa-user mr-1"></i>Following</small>
							</li>
						</ul>
					</div>
					{% if app.user.about != null %}
					<div class="px-4 py-3">
						<h5 class="mb-0">About</h5>
						<div class="p-4 rounded shadow-sm bg-light">
							<p class="font-italic mb-0">{{app.user.about}}</p>
						</div>
					</div>
					{% endif %}
					<div class="py-4 px-4">
						<div class="d-flex align-items-center justify-content-between mb-3">
							<h5 class="mb-0">Recent photos</h5>
							<a href="#" class="btn btn-link text-muted">Show all</a>
						</div>

						{% for cour in cours %}
		{% if loop.index <= 8 %}
			<div class="card mr-3 ml-3 change" style="width:164px;">
				{% if cour.img != null %}
					<img style='width:160px ' class='card-img-top' src="\uploads\{{ cour.img }}">
				{% else %}
					<img style='width:160px' class='card-img-top' src="{{asset('assets/images/undraw_education_f8ru.svg')}}">
				{% endif %}
				<div class="card-body">
					<h4 class="card-title">
						<td>{{ cour.nom }}</td>
					</h4>
					<a href="details.php?id='.$lm['id'].'" class="btn btn-primary">More info</a>
					{% endif %}
				</div>
			</div>
		{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
